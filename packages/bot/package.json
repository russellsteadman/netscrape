{
  "name": "netscrape",
  "version": "0.1.0-alpha0",
  "description": "A structural framework for creating good bots",
  "author": "Russell Steadman",
  "license": "MIT",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc && babel src --out-dir dist --extensions .ts --source-maps true",
    "test": "c8 ava",
    "test:watch": "ava --watch",
    "lint": "eslint"
  },
  "dependencies": {
    "@babel/runtime": "^7.16.7",
    "@types/micromatch": "^4.0.2",
    "@types/node": "^16.11.20",
    "cacheable-lookup": "^6.0.4",
    "got": "^12.0.1",
    "micromatch": "^4.0.4",
    "quick-lru": "^5.1.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/russellsteadman/netscrape.git"
  },
  "keywords": [
    "bot",
    "scrape",
    "spider",
    "crawl"
  ],
  "bugs": {
    "url": "https://github.com/russellsteadman/netscrape/issues"
  },
  "homepage": "https://github.com/russellsteadman/netscrape/tree/main/packages/bot#readme",
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.12",
    "@babel/plugin-transform-runtime": "^7.16.10",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@babel/register": "^7.16.9",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "ava": "^4.0.1",
    "c8": "^7.11.0",
    "eslint": "^8.7.0",
    "eslint-plugin-ava": "^13.2.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14.16"
  },
  "sideEffects": false,
  "types": "dist",
  "c8": {
    "all": true,
    "check-coverage": true,
    "src": "./src"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": "maintained node versions"
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ],
    "sourceMaps": true
  },
  "eslintConfig": {
    "env": {
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 13
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {},
    "overrides": [
      {
        "files": "**/*.*test\\.ts",
        "plugins": [
          "@typescript-eslint",
          "ava"
        ]
      }
    ]
  }
}
